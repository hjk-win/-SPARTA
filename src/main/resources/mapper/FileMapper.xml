<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.jkhan.sparta_easy_upload.dao.FileDao">
    <insert id="saveFile" useGeneratedKeys="true" keyProperty="fileId" parameterType="FileInfo">
        insert into file_info (file_name, file_url) values (#{fileName}, #{fileUrl})
    </insert>

    <delete id="deleteFile" parameterType="FileInfo">
        delete from file_info where file_id = #{fileId}
    </delete>

    <select id="findFileById" parameterType="FileInfo">
        select * from file_info where file_id = #{fileId}
    </select>
</mapper>